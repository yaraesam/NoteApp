<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NotesActivity">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back" />

    <com.yara.noteapp.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="March 20 , 2018 15:35"
        android:textColor="#000000"
        android:textSize="13sp"
        app:font_name="SFProText"
        app:font_style="Medium" />

    <com.yara.noteapp.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Notes App Design"
        android:textColor="#000000"
        android:textSize="22sp"
        app:font_name="SFProDisplay"
        app:font_style="Bold" />

    <com.yara.noteapp.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="start|center_vertical"
        android:text="Apparently we had reached a great height\nin the atmosphere, for the sky was a dead\nblack, and the stars had ceased."
        android:textColor="#000000"
        android:textSize="16sp"
        app:font_name="SFProText"
        app:font_style="Regular" />

</LinearLayout>